pkgname=ophcrack
pkgver=3.8.0
pkgrel=1
pkgdesc='A Windows Password Cracker Based On Rainbow Tables '
arch=('any')
groups=('blackarch')
url='http://ophcrack.sourceforge.net/download.php'
license=('GPL-2.0')
depends=('gcc' 'autogen' 'automake' 'autoconf' 'libtool' 'qt5-charts')
makedepends=()
source=("https://downloads.sourceforge.net/project/ophcrack/ophcrack/3.8.0/ophcrack-3.8.0.tar.bz2?r=https%3A%2F%2Fsourceforge.net%2Fprojects%2Fophcrack%2Ffiles%2Fophcrack%2F3.8.0%2Fophcrack-3.8.0.tar.bz2%2Fdownload&ts=1552278026")
sha512sums=('SKIP')

prepare() {
  cd "$pkgname-$pkgver"
  ./configure
}

build() {
  cd "$pkgname-$pkgver"
  make
}

package() {
  cd "$pkgname-$pkgver"
  sudo make install
}
